# Voice Assistant Configuration
# Copy this file to .env and fill in your values

# Required: Anthropic API Key for AI responses
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Honcho API Key for memory/context features
HONCHO_API_KEY=your_honcho_api_key_here
HONCHO_WORKSPACE=default
HONCHO_SESSION_ID=voice_assistant_session

# Speaker Recognition Configuration
SPEAKER_THRESHOLD=0.52
MAX_SPEAKERS=50
MAX_SAMPLES_PER_SPEAKER=5
MIN_AUDIO_LENGTH=1.5

# Audio Configuration (usually don't need to change)
CHUNK=1024
CHANNELS=1
RATE=44100
